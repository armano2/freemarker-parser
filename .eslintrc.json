{
  "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
  },
    "env": {
        "node": true,
        "mocha": true
    },
    "plugins": [
        "node",
        "mocha"
    ],
    "extends": [
        "eslint:recommended",
        "standard",
        "plugin:node/recommended"
    ],
    "rules": {
        "no-process-exit": "off",
        "no-process-env": "off",
        "global-require": "error",
        "indent": ["error", 2, {
            "SwitchCase": 1,
            "VariableDeclarator": 1,
            "outerIIFEBody": 1,
            // MemberExpression: null,
            // CallExpression: {
            //   parameters: null,
            // },
            "FunctionDeclaration": {
                "parameters": 1,
                "body": 1
            },
            "FunctionExpression": {
                "parameters": 1,
                "body": 1
            }
        }],
        "node/exports-style": ["error", "module.exports"]
    }
}
